{
  "name": "fullstack-dev-challenge",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "ajv": "^8.10.0",
    "cors": "^2.8.5",
    "express": "4.17.1",
    "express-query-parser": "^1.3.2",
    "js-big-decimal": "^1.3.4"
  },
  "scripts": {
    "start": "concurrently -n \"server,client\" -c \"cyan,green\" \"npm run server\" \"npm run client\"",
    "server": "nodemon -e ts --exec 'ts-node --project tsconfig.json server/server.ts'",
    "types": "tsc",
    "client": "node scripts/start-client.js",
    "install": "cd client && yarn install && cd ..",
    "test": "mocha server/**/*.test.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.14.14",
    "concurrently": "5.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.15",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
